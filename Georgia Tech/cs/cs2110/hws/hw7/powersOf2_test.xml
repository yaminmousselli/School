	<test-case>
		<name>powersOf2(0) == 1</name>
		<has-max-executions>1</has-max-executions>
		<max-executions>1000000</max-executions>
		<randomize>1</randomize>
		<input>
			<test-subr>
				<name>POWERSOF2</name>
				<stack>xF000</stack>
				<r7>x5000</r7>
				<r5>xCAFE</r5>
				<params>0</params>
			</test-subr>
		</input>
		<output>
			<test-subr>
				<answer>1</answer>
				<points>
					<answer>3</answer>
					<params>1</params>
					<r7>1</r7>
					<r6>1</r6>
					<r5>1</r5>
                 			<calls>1</calls>
					<read-answer>0</read-answer>
				</points>
				<deductions-per-mistake>1</deductions-per-mistake>
			</test-subr>
		</output>
    </test-case>

